html,body {
	width:640px;
	height:960px;
}
#m_index {
	width:auto;
	height:auto;
}

#header {
	width:auto;
	height:90px;
	background:#f9f4d7;
}

#header #logo {
	display:block;
	position:absolute;
	top:20px;
	left:44px;
}
#header .menu_bar {
	position:absolute;
	top:25px;
	left:570px;
	color:#4a4e59;
}

#content {
	margin:0;
	padding:0;
}

/* 이미지 슬라이더 */
.ani_canvas {
	position:relative;
	width:640px;
	height:870px;
	overflow:hidden;
}

.slider_panel {
	position:relative;
	width:500%;
}

.slider_image{
	float: left;
	width: 640px;
	height: 870px;
}

.bg1{
	background:#41b3ab url(../images/slider_image_01.jpg) no-repeat center top;
}

.bg2{
	background:#e3523f url(../images/slider_image_02.jpg) no-repeat center top;
}

.bg3{
	background:#6639b8 url(../images/slider_image_03.jpg) no-repeat center top;
}

.bg4{
	background:#2280c8 url(../images/slider_image_04.jpg) no-repeat center top;
}

.bg5{
	background:#c4ba47 url(../images/slider_image_05.jpg) no-repeat center top;
}

/* 화살표 */
.left_move {
	position:absolute;
	top:370px;
	left:30px;
}

.right_move{
	position:absolute;
	top:370px;
	right:30px;	
}

/* 패널 */

.control_panel{
	position: absolute;
	top: 470px;
	left: 262px;
	height: 18px;	
	overflow: hidden;			
}

.control_button {
	position: relative;
	width: 18px;
	height: 40px;
	margin-right:3px;
	float: left;
	cursor: pointer;
	background: url('../mobile/images/control_button.png');
}

.control_button:hover {
	top: -22px;
}

.control_button.active {
	top: -22px;
}

/* 메뉴 */
.menu {
	position:relative;
	width:493px;
	margin:0 auto;
	bottom:220px;
}

.menu_btn{
	display:inline-block;
	position:relative;
	width:113px;
	height:130px;
	margin-right:7px;
	background:url(../mobile/images/m_menu_bg.png) no-repeat;
}

.menu_btn.last {
	margin:0;
}

.menu_btn .menu_btn_icon{
	display:block;
	position:relative;
	width:113px;
	height:130px;
	text-align:center;
	color:#eef0d8;
	line-height:130px;
	text-shadow:1px 1px 1px rgba(0,0,0,0.2);
}

.menu_title {
	display:block;
	position:relative;
	width:100px;
	height:25px;
	top:5px;
	color:#eef0d8;
	text-align:center;
	font:bold 1.4em/25px "Malgun Gothic";
}




